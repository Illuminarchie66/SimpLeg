            "text": "[![LegislationCrest](/images/crests/ukpga.gif)](/ukpga/2007/16/introduction/enacted?view=plain)",
            "tokenCum": 44,
            "children": [
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "Parliament (Joint Departments) Act 2007",
                    "tokenCum": 57,
                    "wordSum": 5,
                    "tokenSum": 14,
                    "tokenCount": 13
                },
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "2007 CHAPTER 16",
                    "tokenCum": 66,
                    "children": [
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "An Act to provide for joint departments of the Houses of Parliament; and forconnected purposes.",
                            "tokenCum": 86,
                            "wordSum": 15,
                            "tokenSum": 21,
                            "tokenCount": 21
                        }
                    ],
                    "wordSum": 18,
                    "tokenSum": 31,
                    "tokenCount": 9
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "[19th July 2007]",
                    "tokenCum": 97,
                    "wordSum": 3,
                    "tokenSum": 12,
                    "tokenCount": 11
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "Be it enacted by the Queen\u2019s most Excellent Majesty, by and with the adviceand consent of the Lords Spiritual and Temporal, and Commons, in this presentParliament assembled, and by the authority of the same, as follows:\u2014",
                    "tokenCum": 154,
                    "children": [
                        {
                            "type": "Heading",
                            "prefix": "## 1",
                            "text": "Joint departments of the Houses of Parliament",
                            "tokenCum": 164,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The Corporate Officers may establish joint departments of the Houses ofParliament.",
                                    "tokenCum": 182,
                                    "wordSum": 11,
                                    "tokenSum": 20,
                                    "tokenCount": 20
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "A joint department has the functions that the Corporate Officers allocateto it from time to time.",
                                    "tokenCum": 203,
                                    "wordSum": 16,
                                    "tokenSum": 23,
                                    "tokenCount": 23
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "The Corporate Officers may divide, amalgamate or abolish joint departments.",
                                    "tokenCum": 222,
                                    "wordSum": 10,
                                    "tokenSum": 21,
                                    "tokenCount": 21
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "Their powers in connection with joint departments include power\u2014",
                                    "tokenCum": 233,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "to acquire, hold, manage and dispose of land and other property of anydescription;",
                                            "tokenCum": 251,
                                            "wordSum": 13,
                                            "tokenSum": 21,
                                            "tokenCount": 21
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "to enter into contracts;",
                                            "tokenCum": 257,
                                            "wordSum": 4,
                                            "tokenSum": 9,
                                            "tokenCount": 9
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(c)",
                                            "text": "to do anything reasonably necessary or expedient for or incidental to theirpowers.",
                                            "tokenCum": 275,
                                            "wordSum": 12,
                                            "tokenSum": 21,
                                            "tokenCount": 21
                                        }
                                    ],
                                    "wordSum": 38,
                                    "tokenSum": 64,
                                    "tokenCount": 12
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(5)",
                                    "text": "In this Act\u2014",
                                    "tokenCum": 279,
                                    "children": [
                                        {
                                            "type": "Bullet point",
                                            "prefix": "*",
                                            "text": "  * \u201cCorporate Officers\u201d means the Corporate Officer of the House of Commons and the Corporate Officer of the House of Lords; ",
                                            "tokenCum": 311,
                                            "wordSum": 21,
                                            "tokenSum": 35,
                                            "tokenCount": 35
                                        },
                                        {
                                            "type": "Bullet point",
                                            "prefix": "*",
                                            "text": "  * \u201cjoint department\u201d means a department established under this section. ",
                                            "tokenCum": 326,
                                            "wordSum": 10,
                                            "tokenSum": 18,
                                            "tokenCount": 18
                                        }
                                    ],
                                    "wordSum": 34,
                                    "tokenSum": 59,
                                    "tokenCount": 5
                                }
                            ],
                            "wordSum": 116,
                            "tokenSum": 198,
                            "tokenCount": 10
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 2",
                            "text": "Exercise of functions of the Corporate Officers",
                            "tokenCum": 337,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The Corporate Officers' functions in connection with joint departments areexercisable by them only jointly.",
                                    "tokenCum": 361,
                                    "wordSum": 14,
                                    "tokenSum": 26,
                                    "tokenCount": 26
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "Subsection (3) applies to\u2014",
                                    "tokenCum": 369,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "the exercise of functions under section 1(1) or (3);",
                                            "tokenCum": 384,
                                            "wordSum": 9,
                                            "tokenSum": 18,
                                            "tokenCount": 18
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "the exercise of functions under section 1(2), if it changes the overallcharacter of the services provided by the joint department.",
                                            "tokenCum": 410,
                                            "wordSum": 20,
                                            "tokenSum": 29,
                                            "tokenCount": 29
                                        }
                                    ],
                                    "wordSum": 33,
                                    "tokenSum": 57,
                                    "tokenCount": 9
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "In those cases\u2014",
                                    "tokenCum": 414,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "the Corporate Officer of the House of Commons may act only with theapproval of the House of Commons Commission;",
                                            "tokenCum": 437,
                                            "wordSum": 19,
                                            "tokenSum": 26,
                                            "tokenCount": 26
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "the Corporate Officer of the House of Lords may act only in accordance withrecommendations made by the House Committee of the House of Lords and approvedby that House.",
                                            "tokenCum": 475,
                                            "wordSum": 28,
                                            "tokenSum": 41,
                                            "tokenCount": 41
                                        }
                                    ],
                                    "wordSum": 50,
                                    "tokenSum": 73,
                                    "tokenCount": 5
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "In subsection (3)(b) the reference to the House Committee includes areference to any committee the House of Lords designates instead of thatCommittee for the purposes of this section.",
                                    "tokenCum": 516,
                                    "wordSum": 28,
                                    "tokenSum": 43,
                                    "tokenCount": 43
                                }
                            ],
                            "wordSum": 132,
                            "tokenSum": 211,
                            "tokenCount": 11
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 3",
                            "text": "Staff ",
                            "tokenCum": 518,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The staff of a joint department are appointed by the Corporate Officers andmust be employed under a contract of employment with them.",
                                    "tokenCum": 545,
                                    "wordSum": 22,
                                    "tokenSum": 29,
                                    "tokenCount": 29
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "The Corporate Officers must ensure\u2014",
                                    "tokenCum": 553,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "that the pay of staff is kept broadly in line with pay in the Home CivilService;",
                                            "tokenCum": 572,
                                            "wordSum": 16,
                                            "tokenSum": 22,
                                            "tokenCount": 22
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "that, so far as is consistent with the requirements of both Houses ofParliament, the other conditions of service of staff are kept broadly in linewith those in the Home Civil Service;",
                                            "tokenCum": 611,
                                            "wordSum": 31,
                                            "tokenSum": 42,
                                            "tokenCount": 42
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(c)",
                                            "text": "that the pensions and similar benefits of existing and former staff arekept in line with the provisions of the principal Civil Service PensionScheme, as it applies for the time being to the Home Civil Service.",
                                            "tokenCum": 655,
                                            "wordSum": 35,
                                            "tokenSum": 47,
                                            "tokenCount": 47
                                        }
                                    ],
                                    "wordSum": 87,
                                    "tokenSum": 121,
                                    "tokenCount": 9
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "Subsection (2)(c) does not apply to existing or former staff if provisionfor pensions and similar benefits\u2014",
                                    "tokenCum": 679,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "was made for them under another scheme before they joined the jointdepartment, and",
                                            "tokenCum": 695,
                                            "wordSum": 13,
                                            "tokenSum": 19,
                                            "tokenCount": 19
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "continues to be made under that scheme in respect of their service in thatdepartment.",
                                            "tokenCum": 712,
                                            "wordSum": 14,
                                            "tokenSum": 20,
                                            "tokenCount": 20
                                        }
                                    ],
                                    "wordSum": 43,
                                    "tokenSum": 65,
                                    "tokenCount": 25
                                }
                            ],
                            "wordSum": 153,
                            "tokenSum": 218,
                            "tokenCount": 2
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 4",
                            "text": "Staff transfers",
                            "tokenCum": 715,
                            "children": [
                                {
                                    "type": "Text",
                                    "prefix": "",
                                    "text": "The Schedule (staff transfers) has effect.",
                                    "tokenCum": 727,
                                    "wordSum": 6,
                                    "tokenSum": 14,
                                    "tokenCount": 14
                                }
                            ],
                            "wordSum": 8,
                            "tokenSum": 18,
                            "tokenCount": 3
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 5",
                            "text": "Application of enactments",
                            "tokenCum": 732,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "An enactment applying in relation to persons employed under a contract ofemployment with the Corporate Officer of the House of Lords applies in thesame way in relation to staff of a joint department.",
                                    "tokenCum": 774,
                                    "wordSum": 33,
                                    "tokenSum": 44,
                                    "tokenCount": 44
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "For the purposes of any enactment relating to either House of Parliament,anything done by or on behalf of a joint department or in relation to it isdone by or on behalf of each House or in relation to each House (as the casemay be).",
                                    "tokenCum": 831,
                                    "wordSum": 44,
                                    "tokenSum": 59,
                                    "tokenCount": 59
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "This section applies to enactments whenever passed or made.",
                                    "tokenCum": 843,
                                    "wordSum": 9,
                                    "tokenSum": 14,
                                    "tokenCount": 14
                                }
                            ],
                            "wordSum": 89,
                            "tokenSum": 123,
                            "tokenCount": 5
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 6",
                            "text": "Short title",
                            "tokenCum": 845,
                            "children": [
                                {
                                    "type": "Text",
                                    "prefix": "",
                                    "text": "This Act may be cited as the Parliament (Joint Departments) Act 2007.",
                                    "tokenCum": 867,
                                    "wordSum": 12,
                                    "tokenSum": 24,
                                    "tokenCount": 24
                                }
                            ],
                            "wordSum": 14,
                            "tokenSum": 27,
                            "tokenCount": 2
                        },
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "Section 4",
                            "tokenCum": 870,
                            "wordSum": 2,
                            "tokenSum": 4,
                            "tokenCount": 4
                        }
                    ],
                    "wordSum": 550,
                    "tokenSum": 857,
                    "tokenCount": 57
                }
            ],
