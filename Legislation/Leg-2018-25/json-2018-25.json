                            "text": "General provisions",
                            "tokenCum": 1285,
                            "children": [
                                {
                                    "type": "Heading",
                                    "prefix": "### 3",
                                    "text": "Extent, interpretation and short title",
                                    "tokenCum": 1292,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "This Act extends to England and Wales.",
                                            "tokenCum": 1300,
                                            "wordSum": 7,
                                            "tokenSum": 11,
                                            "tokenCount": 11
                                        },
                                        {
