            "text": "[![LegislationCrest](/images/crests/ukpga.gif)](/ukpga/2011/7/introduction/enacted?view=plain)",
            "tokenCum": 43,
            "children": [
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "Estates of Deceased Persons (Forfeiture Rule and Law of Succession) Act 2011",
                    "tokenCum": 69,
                    "wordSum": 12,
                    "tokenSum": 27,
                    "tokenCount": 26
                },
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "2011 CHAPTER 7",
                    "tokenCum": 77,
                    "children": [
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "An Act to amend the law relating to the distribution of the estates ofdeceased persons; and for connected purposes.",
                            "tokenCum": 104,
                            "wordSum": 19,
                            "tokenSum": 28,
                            "tokenCount": 28
                        }
                    ],
                    "wordSum": 22,
                    "tokenSum": 37,
                    "tokenCount": 8
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "[12th July 2011]",
                    "tokenCum": 115,
                    "wordSum": 3,
                    "tokenSum": 12,
                    "tokenCount": 11
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "Be it enacted by the Queen\u2019s most Excellent Majesty, by and with the adviceand consent of the Lords Spiritual and Temporal, and Commons, in this presentParliament assembled, and by the authority of the same, as follows:\u2014",
                    "tokenCum": 172,
                    "children": [
                        {
                            "type": "Heading",
                            "prefix": "## 1",
                            "text": "Disclaimer or forfeiture on intestacy",
                            "tokenCum": 183,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "Part 4 of the Administration of Estates Act 1925 (distribution of residuaryestate) is amended as follows.",
                                    "tokenCum": 213,
                                    "wordSum": 16,
                                    "tokenSum": 32,
                                    "tokenCount": 32
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "After section 46 (succession to real and personal estate on intestacy)insert\u2014",
                                    "tokenCum": 234,
                                    "wordSum": 11,
                                    "tokenSum": 23,
                                    "tokenCount": 23
                                },
                                {
                                    "type": "Heading",
                                    "prefix": "###",
                                    "text": "\u201c46ADisclaimer or forfeiture on intestacy",
                                    "tokenCum": 249,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "This section applies where a person\u2014",
                                            "tokenCum": 256,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "is entitled in accordance with section 46 to an interest in the residuaryestate of an intestate but disclaims it, or",
                                                    "tokenCum": 288,
                                                    "wordSum": 20,
                                                    "tokenSum": 36,
                                                    "tokenCount": 36
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "would have been so entitled had the person not been precluded by theforfeiture rule from acquiring it.",
                                                    "tokenCum": 311,
                                                    "wordSum": 17,
                                                    "tokenSum": 27,
                                                    "tokenCount": 27
                                                }
                                            ],
                                            "wordSum": 43,
                                            "tokenSum": 73,
                                            "tokenCount": 9
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "The person is to be treated for the purposes of this Part as having diedimmediately before the intestate.",
                                            "tokenCum": 335,
                                            "wordSum": 18,
                                            "tokenSum": 27,
                                            "tokenCount": 27
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "But in a case within subsection (1)(b), subsection (2) does not affect thepower conferred by section 2 of the Forfeiture Act 1982 (power of court tomodify the forfeiture rule).",
                                            "tokenCum": 387,
                                            "wordSum": 29,
                                            "tokenSum": 55,
                                            "tokenCount": 55
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "In this section \u201cforfeiture rule\u201d has the same meaning as in the ForfeitureAct 1982.\u201d.",
                                            "tokenCum": 414,
                                            "wordSum": 14,
                                            "tokenSum": 30,
                                            "tokenCount": 30
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "In section 47(1)(i) (provision that no issue with a parent alive at theintestate\u2019s death may inherit) after \u201cand so that\u201d insert \u201c(subject to section46A)\u201d.",
                                            "tokenCum": 462,
                                            "wordSum": 24,
                                            "tokenSum": 51,
                                            "tokenCount": 51
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "After section 47(4) insert\u2014",
                                            "tokenCum": 472,
                                            "children": [
                                                {
                                                    "type": "Text",
                                                    "prefix": "",
                                                    "text": "\u201c(4A)Subsections (2) and (4) are subject to section 46A.\u201d.",
                                                    "tokenCum": 496,
                                                    "wordSum": 9,
                                                    "tokenSum": 28,
                                                    "tokenCount": 28
                                                }
                                            ],
                                            "wordSum": 13,
                                            "tokenSum": 41,
                                            "tokenCount": 12
                                        }
                                    ],
                                    "wordSum": 146,
                                    "tokenSum": 294,
                                    "tokenCount": 16
                                }
                            ],
                            "wordSum": 178,
                            "tokenSum": 361,
                            "tokenCount": 11
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 2",
                            "text": "Disclaimer or forfeiture of a gift under a will",
                            "tokenCum": 509,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The Wills Act 1837 is amended as follows.",
                                    "tokenCum": 524,
                                    "wordSum": 8,
                                    "tokenSum": 17,
                                    "tokenCount": 17
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "After section 33 insert\u2014",
                                    "tokenCum": 531,
                                    "wordSum": 4,
                                    "tokenSum": 9,
                                    "tokenCount": 9
                                },
                                {
                                    "type": "Heading",
                                    "prefix": "###",
                                    "text": "\u201c33ADisclaimer or forfeiture of gift",
                                    "tokenCum": 544,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "This section applies where a will contains a devise or bequest to a personwho\u2014",
                                            "tokenCum": 562,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "disclaims it, or",
                                                    "tokenCum": 568,
                                                    "wordSum": 3,
                                                    "tokenSum": 10,
                                                    "tokenCount": 10
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "has been precluded by the forfeiture rule from acquiring it.",
                                                    "tokenCum": 583,
                                                    "wordSum": 10,
                                                    "tokenSum": 19,
                                                    "tokenCount": 19
                                                }
                                            ],
                                            "wordSum": 27,
                                            "tokenSum": 50,
                                            "tokenCount": 20
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "The person is, unless a contrary intention appears by the will, to betreated for the purposes of this Act as having died immediately before thetestator.",
                                            "tokenCum": 614,
                                            "wordSum": 25,
                                            "tokenSum": 34,
                                            "tokenCount": 34
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "But in a case within subsection (1)(b), subsection (2) does not affect thepower conferred by section 2 of the Forfeiture Act 1982 (power of court tomodify the forfeiture rule).",
                                            "tokenCum": 666,
                                            "wordSum": 29,
                                            "tokenSum": 55,
                                            "tokenCount": 55
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "In this section \u201cforfeiture rule\u201d has the same meaning as in the ForfeitureAct 1982.\u201d.",
                                            "tokenCum": 693,
                                            "wordSum": 14,
                                            "tokenSum": 30,
                                            "tokenCount": 30
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "In section 33(3) (provision that no issue with a parent alive at thetestator\u2019s death may inherit) after \u201cand so that\u201d insert \u201c(subject to section33A)\u201d.",
                                            "tokenCum": 738,
                                            "wordSum": 24,
                                            "tokenSum": 48,
                                            "tokenCount": 48
                                        }
                                    ],
                                    "wordSum": 124,
                                    "tokenSum": 232,
                                    "tokenCount": 14
                                }
                            ],
                            "wordSum": 145,
                            "tokenSum": 272,
                            "tokenCount": 13
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 3",
                            "text": "Death of a single parent under 18",
                            "tokenCum": 747,
                            "children": [
                                {
                                    "type": "Text",
                                    "prefix": "",
                                    "text": "In section 47 of the Administration of Estates Act 1925 (statutory trusts infavour of issue and other classes of relatives of intestate) after subsection(4A) insert\u2014",
                                    "tokenCum": 794,
                                    "wordSum": 25,
                                    "tokenSum": 49,
                                    "tokenCount": 49
                                }
                            ],
                            "wordSum": 32,
                            "tokenSum": 59,
                            "tokenCount": 9
                        },
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "\u201c(4B)Subsections (4C) and (4D) apply if a beneficiary under the statutorytrusts\u2014",
                            "tokenCum": 825,
                            "children": [
                                {
                                    "type": "Alpha point",
                                    "prefix": "(a)",
                                    "text": "fails to attain an absolutely vested interest because the beneficiary dieswithout having reached 18 and without having married or formed a civilpartnership, and",
                                    "tokenCum": 859,
                                    "wordSum": 23,
                                    "tokenSum": 36,
                                    "tokenCount": 36
                                },
                                {
                                    "type": "Alpha point",
                                    "prefix": "(b)",
                                    "text": "dies leaving issue.",
                                    "tokenCum": 863,
                                    "wordSum": 3,
                                    "tokenSum": 6,
                                    "tokenCount": 6
                                },
                                {
                                    "type": "Text",
                                    "prefix": "",
                                    "text": "(4C)The beneficiary is to be treated for the purposes of this Part as havingdied immediately before the intestate.",
                                    "tokenCum": 892,
                                    "wordSum": 18,
                                    "tokenSum": 31,
                                    "tokenCount": 31
                                },
                                {
                                    "type": "Text",
                                    "prefix": "",
                                    "text": "(4D)The residuary estate (together with the income from it and any statutoryaccumulations of income from it) or so much of it as has not been paid orapplied under a power affecting it is to devolve accordingly.\u201d.",
                                    "tokenCum": 949,
                                    "wordSum": 36,
                                    "tokenSum": 59,
                                    "tokenCount": 59
                                }
                            ],
                            "wordSum": 91,
                            "tokenSum": 164,
                            "tokenCount": 31
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 4",
                            "text": "Short title, commencement, application and extent",
                            "tokenCum": 959,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "This Act may be cited as the Estates of Deceased Persons (Forfeiture Ruleand Law of Succession) Act 2011.",
                                    "tokenCum": 994,
                                    "wordSum": 18,
                                    "tokenSum": 37,
                                    "tokenCount": 37
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "This Act (apart from this section) comes into force on such day as theSecretary of State may by order made by statutory instrument appoint.",
                                    "tokenCum": 1026,
                                    "wordSum": 24,
                                    "tokenSum": 34,
                                    "tokenCount": 34
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "But the order may not provide for this Act to come into force before theend of three months beginning with the day on which it is passed.",
                                    "tokenCum": 1055,
                                    "wordSum": 27,
                                    "tokenSum": 31,
                                    "tokenCount": 31
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "This Act does not apply in the case of a death that occurs before thecommencement of sections 1, 2 and 3 of this Act.",
                                    "tokenCum": 1087,
                                    "wordSum": 24,
                                    "tokenSum": 34,
                                    "tokenCount": 34
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(5)",
                                    "text": "This Act extends to England and Wales only.",
                                    "tokenCum": 1096,
                                    "children": [
                                        {
                                            "type": "Text",
                                            "prefix": "",
                                            "text": "",
                                            "tokenCum": 1096,
                                            "wordSum": 0,
                                            "tokenSum": 3,
                                            "tokenCount": 3
                                        }
                                    ],
                                    "wordSum": 8,
                                    "tokenSum": 14,
                                    "tokenCount": 10
                                }
                            ],
                            "wordSum": 107,
                            "tokenSum": 161,
                            "tokenCount": 10
                        }
                    ],
                    "wordSum": 589,
                    "tokenSum": 1075,
                    "tokenCount": 57
                }
            ],
