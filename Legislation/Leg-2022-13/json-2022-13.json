            "text": "[![LegislationCrest](/images/crests/ukpga.gif)](/ukpga/2022/13/introduction/enacted?view=plain)",
            "tokenCum": 44,
            "children": [
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "Education (Careers Guidance in Schools) Act 2022",
                    "tokenCum": 62,
                    "wordSum": 7,
                    "tokenSum": 19,
                    "tokenCount": 18
                },
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "2022 CHAPTER 13",
                    "tokenCum": 71,
                    "children": [
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "An Act to extend the duty to provide careers guidance in schools.",
                            "tokenCum": 85,
                            "wordSum": 12,
                            "tokenSum": 15,
                            "tokenCount": 15
                        }
                    ],
                    "wordSum": 15,
                    "tokenSum": 25,
                    "tokenCount": 9
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "[31st March 2022]",
                    "tokenCum": 96,
                    "wordSum": 3,
                    "tokenSum": 12,
                    "tokenCount": 11
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "Be it enacted by the Queen\u2019s most Excellent Majesty, by and with the adviceand consent of the Lords Spiritual and Temporal, and Commons, in this presentParliament assembled, and by the authority of the same, as follows:\u2014",
                    "tokenCum": 153,
                    "children": [
                        {
                            "type": "Heading",
                            "prefix": "## 1",
                            "text": "Extension of duty to provide careers guidance in schools",
                            "tokenCum": 164,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "Section 42A of the Education Act 1997 (duty to provide careers guidance inschools in England) is amended as follows.",
                                    "tokenCum": 199,
                                    "wordSum": 19,
                                    "tokenSum": 37,
                                    "tokenCount": 37
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "In subsection (1) for \u201cthe relevant phase of their education\u201d substitute\u201ctheir secondary education\u201d.",
                                    "tokenCum": 221,
                                    "wordSum": 13,
                                    "tokenSum": 24,
                                    "tokenCount": 24
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "In subsection (2) after paragraph (c) insert\u2014",
                                    "tokenCum": 234,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "\u201c(d)",
                                            "text": "an Academy school;",
                                            "tokenCum": 238,
                                            "wordSum": 3,
                                            "tokenSum": 7,
                                            "tokenCount": 7
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(e)",
                                            "text": "an alternative provision Academy.\u201d",
                                            "tokenCum": 243,
                                            "wordSum": 4,
                                            "tokenSum": 8,
                                            "tokenCount": 8
                                        }
                                    ],
                                    "wordSum": 14,
                                    "tokenSum": 30,
                                    "tokenCount": 14
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "In subsection (3) after paragraph (b) insert\u2014",
                                    "tokenCum": 256,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "\u201c(c)",
                                            "text": "in the case of an Academy school or an alternative provision Academy, theproprietor.\u201d",
                                            "tokenCum": 275,
                                            "wordSum": 13,
                                            "tokenSum": 22,
                                            "tokenCount": 22
                                        }
                                    ],
                                    "wordSum": 20,
                                    "tokenSum": 37,
                                    "tokenCount": 14
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(5)",
                                    "text": "After subsection (4) insert\u2014",
                                    "tokenCum": 283,
                                    "children": [
                                        {
                                            "type": "Text",
                                            "prefix": "",
                                            "text": "\u201c(4A)Subsection (4)(b) does not apply in relation to pupils over compulsoryschool age.\u201d",
                                            "tokenCum": 310,
                                            "wordSum": 12,
                                            "tokenSum": 30,
                                            "tokenCount": 30
                                        }
                                    ],
                                    "wordSum": 16,
                                    "tokenSum": 40,
                                    "tokenCount": 9
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(6)",
                                    "text": "Omit subsection (6).",
                                    "tokenCum": 317,
                                    "wordSum": 3,
                                    "tokenSum": 9,
                                    "tokenCount": 9
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(7)",
                                    "text": "In subsection (7) omit the definition of \u201cclass\u201d.",
                                    "tokenCum": 331,
                                    "wordSum": 8,
                                    "tokenSum": 16,
                                    "tokenCount": 16
                                }
                            ],
                            "wordSum": 102,
                            "tokenSum": 205,
                            "tokenCount": 11
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 2",
                            "text": "Consequential amendments",
                            "tokenCum": 337,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "In section 43(6) of the Education Act 1997 (careers education in Welshschools) for the definition of \u201cclass\u201d substitute\u2014",
                                    "tokenCum": 373,
                                    "children": [
                                        {
                                            "type": "Bullet point",
                                            "prefix": "*",
                                            "text": "  * \u201c\u201cclass\u201d, in relation to a pupil, means\u2014",
                                            "tokenCum": 388,
                                            "wordSum": 8,
                                            "tokenSum": 18,
                                            "tokenCount": 18
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "the teaching group in which the pupil is regularly taught, or",
                                            "tokenCum": 388,
                                            "wordSum": 11,
                                            "tokenSum": 16,
                                            "tokenCount": 16
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "if the pupil is taught in different groups for different subjects, such one ofthose groups as is designated by the head teacher of the school or, in thecase of a pupil at a pupil referral unit, by the teacher in charge of theunit;\u201d.",
                                            "tokenCum": 401,
                                            "wordSum": 43,
                                            "tokenSum": 59,
                                            "tokenCount": 59
                                        }
                                    ],
                                    "wordSum": 80,
                                    "tokenSum": 131,
                                    "tokenCount": 37
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "In section 46(1) of that Act (power to extend scope of certain provisions)omit\u2014",
                                    "tokenCum": 481,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "\u201c42A,\u201d; ",
                                            "tokenCum": 488,
                                            "wordSum": 1,
                                            "tokenSum": 10,
                                            "tokenCount": 10
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "\u201c42A(6),\u201d. ",
                                            "tokenCum": 497,
                                            "wordSum": 1,
                                            "tokenSum": 12,
                                            "tokenCount": 12
                                        }
                                    ],
                                    "wordSum": 15,
                                    "tokenSum": 48,
                                    "tokenCount": 25
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "The Careers Guidance in Schools Regulations 2013 ([S.I.2013/709](/id/uksi/2013/709?view=plain \"Go to item of legislation\")) arerevoked.",
                                    "tokenCum": 557,
                                    "wordSum": 14,
                                    "tokenSum": 62,
                                    "tokenCount": 62
                                }
                            ],
                            "wordSum": 111,
                            "tokenSum": 248,
                            "tokenCount": 6
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 3",
                            "text": "Extent, commencement and short title",
                            "tokenCum": 566,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "This Act extends to England and Wales.",
                                    "tokenCum": 574,
                                    "wordSum": 7,
                                    "tokenSum": 10,
                                    "tokenCount": 10
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "Sections 1 and 2 come into force on such day or days as the Secretary ofState may by regulations made by statutory instrument appoint.",
                                    "tokenCum": 606,
                                    "wordSum": 24,
                                    "tokenSum": 34,
                                    "tokenCount": 34
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "This section comes into force on the day on which this Act is passed.",
                                    "tokenCum": 621,
                                    "wordSum": 14,
                                    "tokenSum": 17,
                                    "tokenCount": 17
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "This Act may be cited as the Education (Careers Guidance in Schools) Act2022.",
                                    "tokenCum": 647,
                                    "children": [
                                        {
                                            "type": "Text",
                                            "prefix": "",
                                            "text": "",
