            "text": "[![LegislationCrest](/images/crests/ukpga.gif)](/ukpga/2002/5/introduction/enacted?view=plain)",
            "tokenCum": 43,
            "children": [
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "Civil Defence (Grant) Act 2002",
                    "tokenCum": 56,
                    "wordSum": 5,
                    "tokenSum": 14,
                    "tokenCount": 13
                },
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "2002 CHAPTER 5",
                    "tokenCum": 64,
                    "children": [
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "An Act to replace section 3 of the Civil Defence Act 1948 in so far as itapplies to authorities in England or Wales.",
                            "tokenCum": 96,
                            "wordSum": 23,
                            "tokenSum": 33,
                            "tokenCount": 33
                        }
                    ],
                    "wordSum": 26,
                    "tokenSum": 42,
                    "tokenCount": 8
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "[26th February 2002]",
                    "tokenCum": 107,
                    "wordSum": 3,
                    "tokenSum": 12,
                    "tokenCount": 11
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "Be it enacted by the Queen\u2019s most Excellent Majesty, by and with the adviceand consent of the Lords Spiritual and Temporal, and Commons, in this presentParliament assembled, and by the authority of the same, as follows:\u2014",
                    "tokenCum": 164,
                    "children": [
                        {
                            "type": "Heading",
                            "prefix": "## 1",
                            "text": "Civil defence: grants",
                            "tokenCum": 169,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The following shall be substituted for section 3 of the Civil Defence Act[1948 (c. 5)](/id/ukpga/1948/5?view=plain \"Go to item of legislation\")(grants) in so far as it applies in relation to authorities in England orWales\u2014",
                                    "tokenCum": 242,
                                    "wordSum": 33,
                                    "tokenSum": 75,
                                    "tokenCount": 75
                                },
                                {
                                    "type": "Heading",
                                    "prefix": "###",
                                    "text": "\u201c3Fixed grant",
                                    "tokenCum": 246,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "For each financial year the designated Minister shall make grants toauthorities on whom functions are conferred under section 2.",
                                            "tokenCum": 271,
                                            "wordSum": 19,
                                            "tokenSum": 28,
                                            "tokenCount": 28
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "For each financial year the designated Minister shall\u2014",
                                            "tokenCum": 280,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "determine the aggregate amount of grants to be made under subsection (1),",
                                                    "tokenCum": 296,
                                                    "wordSum": 12,
                                                    "tokenSum": 20,
                                                    "tokenCount": 20
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "determine for each authority the amount of grant (if any) to be made undersubsection (1),",
                                                    "tokenCum": 317,
                                                    "wordSum": 15,
                                                    "tokenSum": 25,
                                                    "tokenCount": 25
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(c)",
                                                    "text": "publish each amount determined under paragraph (a) or (b),",
                                                    "tokenCum": 330,
                                                    "wordSum": 9,
                                                    "tokenSum": 17,
                                                    "tokenCount": 17
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(d)",
                                                    "text": "publish any formula or other criteria used to determine whether to make agrant to an authority, and",
                                                    "tokenCum": 349,
                                                    "wordSum": 17,
                                                    "tokenSum": 23,
                                                    "tokenCount": 23
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(e)",
                                                    "text": "publish any formula or other criteria used to determine the amount of agrant.",
                                                    "tokenCum": 364,
                                                    "wordSum": 13,
                                                    "tokenSum": 19,
                                                    "tokenCount": 19
                                                }
                                            ],
                                            "wordSum": 74,
                                            "tokenSum": 116,
                                            "tokenCount": 11
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "The designated Minister\u2014",
                                            "tokenCum": 368,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "may use different formulae or other criteria in making determinations fordifferent authorities, and",
                                                    "tokenCum": 385,
                                                    "wordSum": 13,
                                                    "tokenSum": 21,
                                                    "tokenCount": 21
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "may vary a determination by a further determination.",
                                                    "tokenCum": 396,
                                                    "wordSum": 8,
                                                    "tokenSum": 15,
                                                    "tokenCount": 15
                                                }
                                            ],
                                            "wordSum": 24,
                                            "tokenSum": 43,
                                            "tokenCount": 6
                                        }
                                    ],
                                    "wordSum": 119,
                                    "tokenSum": 193,
                                    "tokenCount": 5
                                },
                                {
                                    "type": "Heading",
                                    "prefix": "### 3",
                                    "text": "ADiscretionary grant",
                                    "tokenCum": 402,
                                    "children": [
                                        {
                                            "type": "Text",
                                            "prefix": "",
                                            "text": "The designated Minister may make a grant to an authority on whom a function isconferred under section 2 (whether or not in addition to any grant undersection 3).",
                                            "tokenCum": 438,
                                            "wordSum": 28,
                                            "tokenSum": 39,
                                            "tokenCount": 39
                                        }
                                    ],
                                    "wordSum": 30,
                                    "tokenSum": 47,
                                    "tokenCount": 7
                                },
                                {
                                    "type": "Heading",
                                    "prefix": "### 3",
                                    "text": "BPayment ",
                                    "tokenCum": 442,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "Grant under section 3 or 3A shall be paid in such manner and at such timeas the designated Minister determines.",
                                            "tokenCum": 468,
                                            "wordSum": 20,
                                            "tokenSum": 29,
                                            "tokenCount": 29
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "In particular\u2014",
                                            "tokenCum": 471,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "a grant for a financial year need not be paid in that year, and",
                                                    "tokenCum": 486,
                                                    "wordSum": 14,
                                                    "tokenSum": 19,
                                                    "tokenCount": 19
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "a grant may be paid in instalments.",
                                                    "tokenCum": 495,
                                                    "wordSum": 7,
                                                    "tokenSum": 13,
                                                    "tokenCount": 13
                                                }
                                            ],
                                            "wordSum": 23,
                                            "tokenSum": 38,
                                            "tokenCount": 5
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "A grant under section 3 or 3A may be conditional.",
                                            "tokenCum": 509,
                                            "wordSum": 10,
                                            "tokenSum": 17,
                                            "tokenCount": 17
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "An authority shall repay to the designated Minister any sum which\u2014",
                                            "tokenCum": 522,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "the authority receives by way of grant under section 3 for a financialyear, and",
                                                    "tokenCum": 539,
                                                    "wordSum": 14,
                                                    "tokenSum": 21,
                                                    "tokenCount": 21
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "exceeds the amount to which the authority is entitled under that sectionfor that year (whether or not by virtue of a varying determination undersection 3(3)(b)).\u201d",
                                                    "tokenCum": 577,
                                                    "wordSum": 25,
                                                    "tokenSum": 42,
                                                    "tokenCount": 42
                                                }
                                            ],
                                            "wordSum": 50,
                                            "tokenSum": 79,
                                            "tokenCount": 15
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "In section 2(3) of the Civil Protection in Peacetime Act [1986 (c.22)](/id/ukpga/1986/22?view=plain \"Go to item of legislation\") (emergency) forthe words \u201cregulations made under section 3 of that Act\u201d there shall besubstituted the words \u201cunder section 3 or 3A of that Act\u201d.",
                                            "tokenCum": 672,
                                            "wordSum": 41,
                                            "tokenSum": 98,
                                            "tokenCount": 98
                                        }
                                    ],
                                    "wordSum": 145,
                                    "tokenSum": 267,
                                    "tokenCount": 5
                                }
                            ],
                            "wordSum": 330,
                            "tokenSum": 588,
                            "tokenCount": 5
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 2",
                            "text": "General ",
                            "tokenCum": 674,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "This Act may be cited as the Civil Defence (Grant) Act 2002.",
                                    "tokenCum": 696,
                                    "wordSum": 12,
                                    "tokenSum": 24,
                                    "tokenCount": 24
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "This Act shall have effect in relation to\u2014",
                                    "tokenCum": 705,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "the financial year ending with 31st March 2003, and",
                                            "tokenCum": 722,
                                            "wordSum": 9,
                                            "tokenSum": 20,
                                            "tokenCount": 20
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "later financial years.",
                                            "tokenCum": 726,
                                            "wordSum": 3,
                                            "tokenSum": 7,
                                            "tokenCount": 7
                                        }
                                    ],
                                    "wordSum": 20,
                                    "tokenSum": 38,
                                    "tokenCount": 10
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "This Act does not extend to Northern Ireland.",
                                    "tokenCum": 735,
                                    "children": [
                                        {
                                            "type": "Text",
                                            "prefix": "",
                                            "text": "",
                                            "tokenCum": 735,
                                            "wordSum": 0,
                                            "tokenSum": 3,
                                            "tokenCount": 3
                                        }
                                    ],
                                    "wordSum": 8,
                                    "tokenSum": 14,
                                    "tokenCount": 10
                                }
                            ],
                            "wordSum": 41,
                            "tokenSum": 79,
                            "tokenCount": 2
                        }
                    ],
                    "wordSum": 407,
                    "tokenSum": 725,
                    "tokenCount": 57
                }
            ],
