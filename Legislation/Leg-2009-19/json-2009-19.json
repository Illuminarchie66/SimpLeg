            "text": "[![LegislationCrest](/images/crests/ukpga.gif)](/ukpga/2009/19/introduction/enacted?view=plain)",
            "tokenCum": 44,
            "children": [
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "Green Energy (Definition and Promotion) Act 2009",
                    "tokenCum": 58,
                    "wordSum": 7,
                    "tokenSum": 15,
                    "tokenCount": 14
                },
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "2009 CHAPTER 19",
                    "tokenCum": 67,
                    "children": [
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "An Act to define the term \u201cgreen energy\u201d; to promote its development,installation and usage; and for connected purposes.",
                            "tokenCum": 93,
                            "wordSum": 18,
                            "tokenSum": 27,
                            "tokenCount": 27
                        }
                    ],
                    "wordSum": 21,
                    "tokenSum": 37,
                    "tokenCount": 9
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "[12th November 2009]",
                    "tokenCum": 104,
                    "wordSum": 3,
                    "tokenSum": 12,
                    "tokenCount": 11
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "Be it enacted by the Queen\u2019s most Excellent Majesty, by and with the adviceand consent of the Lords Spiritual and Temporal, and Commons, in this presentParliament assembled, and by the authority of the same, as follows:\u2014",
                    "tokenCum": 161,
                    "children": [
                        {
                            "type": "Heading",
                            "prefix": "## 1",
                            "text": "Definition and promotion of green energy",
                            "tokenCum": 167,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The principal purpose of this Act is to promote green energy.",
                                    "tokenCum": 179,
                                    "wordSum": 11,
                                    "tokenSum": 14,
                                    "tokenCount": 14
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "In this Act \u201cgreen energy\u201d means\u2014",
                                    "tokenCum": 188,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "the generation of electricity or heat from renewable or low-carbon sourcesby the use of any equipment, the capacity of which to generate electricity orheat does not exceed the capacity specified in subsection (3); and",
                                            "tokenCum": 235,
                                            "wordSum": 34,
                                            "tokenSum": 50,
                                            "tokenCount": 50
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "energy efficiency measures.",
                                            "tokenCum": 239,
                                            "wordSum": 3,
                                            "tokenSum": 7,
                                            "tokenCount": 7
                                        }
                                    ],
                                    "wordSum": 43,
                                    "tokenSum": 68,
                                    "tokenCount": 10
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "That capacity is\u2014",
                                    "tokenCum": 243,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "in relation to the generation of electricity, 5 megawatts;",
                                            "tokenCum": 259,
                                            "wordSum": 9,
                                            "tokenSum": 19,
                                            "tokenCount": 19
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "in relation to the generation of heat, 5 megawatts thermal.",
                                            "tokenCum": 275,
                                            "wordSum": 10,
                                            "tokenSum": 19,
                                            "tokenCount": 19
                                        }
                                    ],
                                    "wordSum": 22,
                                    "tokenSum": 44,
                                    "tokenCount": 5
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "In carrying out any function under this Act, the Secretary of State musthave regard to\u2014",
                                    "tokenCum": 293,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "the principal purpose set out in subsection (1);",
                                            "tokenCum": 304,
                                            "wordSum": 8,
                                            "tokenSum": 14,
                                            "tokenCount": 14
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "the desirability of alleviating fuel poverty; and",
                                            "tokenCum": 318,
                                            "wordSum": 7,
                                            "tokenSum": 17,
                                            "tokenCount": 17
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(c)",
                                            "text": "the desirability of securing a diverse and viable long-term energy supply.",
                                            "tokenCum": 338,
                                            "wordSum": 11,
                                            "tokenSum": 23,
                                            "tokenCount": 23
                                        }
                                    ],
                                    "wordSum": 41,
                                    "tokenSum": 74,
                                    "tokenCount": 19
                                }
                            ],
                            "wordSum": 123,
                            "tokenSum": 207,
                            "tokenCount": 6
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 2",
                            "text": "Microgeneration strategy",
                            "tokenCum": 342,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The Secretary of State must prepare and publish a strategy for thepromotion of microgeneration in England.",
                                    "tokenCum": 363,
                                    "wordSum": 16,
                                    "tokenSum": 23,
                                    "tokenCount": 23
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "Before preparing the strategy, the Secretary of State must consult\u2014",
                                    "tokenCum": 376,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "persons who appear to the Secretary of State to represent the producers andsuppliers of equipment for microgeneration; and",
                                            "tokenCum": 400,
                                            "wordSum": 18,
                                            "tokenSum": 27,
                                            "tokenCount": 27
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "any other persons whom the Secretary of State thinks it appropriate toconsult.",
                                            "tokenCum": 415,
                                            "wordSum": 12,
                                            "tokenSum": 18,
                                            "tokenCount": 18
                                        }
                                    ],
                                    "wordSum": 40,
                                    "tokenSum": 60,
                                    "tokenCount": 14
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "Consultation under subsection (2) must begin within 6 months beginning withthe coming into force of this Act.",
                                    "tokenCum": 440,
                                    "wordSum": 17,
                                    "tokenSum": 27,
                                    "tokenCount": 27
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "The Secretary of State must publish the strategy within 6 months beginningwith the end of the consultation.",
                                    "tokenCum": 461,
                                    "wordSum": 17,
                                    "tokenSum": 23,
                                    "tokenCount": 23
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(5)",
                                    "text": "In preparing the strategy, the Secretary of State must\u2014",
                                    "tokenCum": 473,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "consider the contribution that is capable of being made by microgenerationto the matters specified in section 82(3) of the Energy Act 2004(microgeneration strategy for Great Britain); and",
                                            "tokenCum": 518,
                                            "wordSum": 27,
                                            "tokenSum": 48,
                                            "tokenCount": 48
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "have regard to any other strategy published by the Secretary of State on orafter 1st July 2009 in so far as it relates to the generation of electricityor heat from renewable or low-carbon sources.",
                                            "tokenCum": 567,
                                            "wordSum": 34,
                                            "tokenSum": 52,
                                            "tokenCount": 52
                                        }
                                    ],
                                    "wordSum": 70,
                                    "tokenSum": 114,
                                    "tokenCount": 13
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(6)",
                                    "text": "The Secretary of State must take reasonable steps to secure theimplementation of the strategy.",
                                    "tokenCum": 583,
                                    "wordSum": 14,
                                    "tokenSum": 18,
                                    "tokenCount": 18
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(7)",
                                    "text": "In this section\u2014",
                                    "tokenCum": 587,
                                    "children": [
                                        {
                                            "type": "Bullet point",
                                            "prefix": "*",
                                            "text": "  * \u201cmicrogeneration\u201d has the meaning given by section 82 of the Energy Act 2004, but as if in subsection (8) of that section for \u201c45 kilowatts thermal\u201d there were substituted \u201c300 kilowatts thermal\u201d; ",
                                            "tokenCum": 653,
                                            "wordSum": 33,
                                            "tokenSum": 69,
                                            "tokenCount": 69
                                        },
                                        {
                                            "type": "Bullet point",
                                            "prefix": "*",
                                            "text": "  * \u201crenewable or low-carbon source\u201d means a source of energy or technology specified in section 82(7) of the Energy Act 2004. ",
                                            "tokenCum": 693,
                                            "wordSum": 21,
                                            "tokenSum": 43,
                                            "tokenCount": 43
                                        }
                                    ],
                                    "wordSum": 57,
                                    "tokenSum": 118,
                                    "tokenCount": 5
                                }
                            ],
                            "wordSum": 233,
                            "tokenSum": 388,
                            "tokenCount": 4
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 3",
                            "text": "Microgeneration: dwellinghouses",
                            "tokenCum": 701,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The Secretary of State must amend the Town and Country Planning (GeneralPermitted Development) Order 1995 ([S.I.1995/418](/id/uksi/1995/418?view=plain \"Go to item of legislation\")) (the\u201cGPDO\u201d), in relation to England, to provide for the grant of planningpermission for specified classes of equipment for microgeneration on, orwithin the curtilage of, a dwellinghouse.",
                                    "tokenCum": 810,
                                    "wordSum": 47,
                                    "tokenSum": 111,
                                    "tokenCount": 111
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "The classes of equipment for microgeneration specified by virtue ofsubsection (1) must be or include wind turbines and air source heat pumps.",
                                    "tokenCum": 841,
                                    "wordSum": 22,
                                    "tokenSum": 33,
                                    "tokenCount": 33
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "\u201cSpecified\u201d in subsections (1) and (2) means specified in the GPDO.",
                                    "tokenCum": 862,
                                    "wordSum": 11,
                                    "tokenSum": 23,
                                    "tokenCount": 23
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "The amendment mentioned in subsection (1) must be made within 6 monthsbeginning with the coming into force of this Act.",
                                    "tokenCum": 891,
                                    "wordSum": 20,
                                    "tokenSum": 31,
                                    "tokenCount": 31
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(5)",
                                    "text": "Provision by virtue of subsection (1) may grant planning permission subjectto limitations, exceptions or conditions.",
                                    "tokenCum": 913,
                                    "wordSum": 15,
                                    "tokenSum": 24,
                                    "tokenCount": 24
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(6)",
                                    "text": "The Secretary of State must review the effect of the amendment of the GPDOas soon as reasonably practicable after the end of 2 years beginning with thedate on which the amendment comes into force.",
                                    "tokenCum": 959,
                                    "wordSum": 34,
                                    "tokenSum": 48,
                                    "tokenCount": 48
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(7)",
                                    "text": "In this section \u201cmicrogeneration\u201d has the meaning given by section 82 ofthe Energy Act 2004.",
                                    "tokenCum": 987,
                                    "wordSum": 15,
                                    "tokenSum": 30,
                                    "tokenCount": 30
                                }
                            ],
                            "wordSum": 166,
                            "tokenSum": 309,
                            "tokenCount": 8
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 4",
                            "text": "Microgeneration: non-domestic land",
                            "tokenCum": 996,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "The Secretary of State must consider amending the GPDO for the purpose offacilitating the installation of equipment for microgeneration on non-domesticland in England.",
                                    "tokenCum": 1032,
                                    "wordSum": 23,
                                    "tokenSum": 38,
                                    "tokenCount": 38
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "In subsection (1) \u201cnon-domestic land\u201d means buildings, or other land, otherthan a dwellinghouse or land within the curtilage of a dwellinghouse.",
                                    "tokenCum": 1071,
                                    "wordSum": 21,
                                    "tokenSum": 41,
                                    "tokenCount": 41
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "Consideration under subsection (1) must begin within 6 months beginningwith the coming into force of this Act.",
                                    "tokenCum": 1095,
                                    "wordSum": 17,
                                    "tokenSum": 26,
                                    "tokenCount": 26
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(4)",
                                    "text": "The Secretary of State must, as soon as reasonably practicable, lay areport before Parliament setting out the outcome of the consideration undersubsection (1).",
                                    "tokenCum": 1128,
                                    "wordSum": 23,
                                    "tokenSum": 35,
                                    "tokenCount": 35
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(5)",
                                    "text": "In considering what, if any, amendments should be made to the GPDO, theSecretary of State\u2014",
                                    "tokenCum": 1152,
                                    "children": [
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(a)",
                                            "text": "must have regard to the results of any relevant consultation which has beencarried out by the Secretary of State in relation to the GPDO; and",
                                            "tokenCum": 1182,
                                            "wordSum": 25,
                                            "tokenSum": 33,
                                            "tokenCount": 33
                                        },
                                        {
                                            "type": "Alpha point",
                                            "prefix": "(b)",
                                            "text": "may carry out further consultation if the Secretary of State thinks itappropriate.",
                                            "tokenCum": 1199,
                                            "wordSum": 12,
                                            "tokenSum": 20,
                                            "tokenCount": 20
                                        }
                                    ],
                                    "wordSum": 52,
                                    "tokenSum": 79,
                                    "tokenCount": 25
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(6)",
                                    "text": "In this section \u201cmicrogeneration\u201d has the same meaning as in section 3.",
                                    "tokenCum": 1218,
                                    "wordSum": 12,
                                    "tokenSum": 21,
                                    "tokenCount": 21
                                }
                            ],
                            "wordSum": 151,
                            "tokenSum": 250,
                            "tokenCount": 9
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 5",
                            "text": "Interpretation ",
                            "tokenCum": 1222,
                            "children": [
                                {
                                    "type": "Text",
                                    "prefix": "",
                                    "text": "In this Act\u2014",
                                    "tokenCum": 1226,
                                    "wordSum": 3,
                                    "tokenSum": 6,
                                    "tokenCount": 6
                                },
                                {
                                    "type": "Bullet point",
                                    "prefix": "*",
                                    "text": "  * \u201cdwellinghouse\u201d includes a building which consists wholly of flats; ",
                                    "tokenCum": 1246,
                                    "wordSum": 10,
                                    "tokenSum": 22,
                                    "tokenCount": 22
                                },
                                {
                                    "type": "Bullet point",
                                    "prefix": "*",
                                    "text": "  * \u201cenergy efficiency measure\u201d means a measure to improve efficiency in the use by consumers of electricity, gas or any other source of energy; ",
                                    "tokenCum": 1278,
                                    "wordSum": 24,
                                    "tokenSum": 34,
                                    "tokenCount": 34
                                },
                                {
                                    "type": "Bullet point",
                                    "prefix": "*",
                                    "text": "  * \u201cequipment\u201d means anything which is plant for the purposes of section 82(6) of the Energy Act 2004; ",
                                    "tokenCum": 1312,
                                    "wordSum": 18,
                                    "tokenSum": 36,
                                    "tokenCount": 36
                                },
                                {
                                    "type": "Bullet point",
                                    "prefix": "*",
                                    "text": "  * \u201cfuel poverty\u201d has the meaning given by section 1 of the Warm Homes and Energy Conservation Act 2000; ",
                                    "tokenCum": 1346,
                                    "wordSum": 19,
                                    "tokenSum": 36,
                                    "tokenCount": 36
                                },
                                {
                                    "type": "Bullet point",
                                    "prefix": "*",
                                    "text": "  * \u201cthe GPDO\u201d has the meaning given by section 3(1); ",
                                    "tokenCum": 1365,
                                    "wordSum": 10,
                                    "tokenSum": 21,
                                    "tokenCount": 21
                                },
                                {
                                    "type": "Bullet point",
                                    "prefix": "*",
                                    "text": "  * \u201crenewable or low-carbon source\u201d has the meaning given by section 2(7). ",
                                    "tokenCum": 1390,
                                    "wordSum": 12,
                                    "tokenSum": 27,
                                    "tokenCount": 27
                                }
                            ],
                            "wordSum": 97,
                            "tokenSum": 187,
                            "tokenCount": 4
                        },
                        {
                            "type": "Heading",
                            "prefix": "## 6",
                            "text": "Short title, commencement and extent",
                            "tokenCum": 1398,
                            "children": [
                                {
                                    "type": "Digit point",
                                    "prefix": "(1)",
                                    "text": "This Act may be cited as the Green Energy (Definition and Promotion) Act2009.",
                                    "tokenCum": 1420,
                                    "wordSum": 13,
                                    "tokenSum": 24,
                                    "tokenCount": 24
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(2)",
                                    "text": "This Act comes into force at the end of 2 months beginning with the day onwhich it is passed.",
                                    "tokenCum": 1442,
                                    "wordSum": 19,
                                    "tokenSum": 24,
                                    "tokenCount": 24
                                },
                                {
                                    "type": "Digit point",
                                    "prefix": "(3)",
                                    "text": "This Act extends to England and Wales only.",
                                    "tokenCum": 1451,
                                    "children": [
                                        {
                                            "type": "Text",
                                            "prefix": "",
                                            "text": "",
                                            "tokenCum": 1451,
                                            "wordSum": 0,
                                            "tokenSum": 3,
                                            "tokenCount": 3
                                        }
                                    ],
                                    "wordSum": 8,
                                    "tokenSum": 14,
                                    "tokenCount": 10
                                }
                            ],
                            "wordSum": 45,
                            "tokenSum": 71,
                            "tokenCount": 8
                        }
                    ],
                    "wordSum": 851,
                    "tokenSum": 1470,
                    "tokenCount": 57
                }
            ],
            "wordSum": 883,
            "tokenSum": 1579,
            "tokenCount": 44
        }
    ],
