        {
            "type": "Text",
            "prefix": "",
            "text": "[![LegislationCrest](/images/crests/ukpga.gif)](/ukpga/2022/34/introduction/enacted?view=plain)",
            "tokenCum": 44,
            "children": [
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "British Sign Language Act 2022",
                    "tokenCum": 53,
                    "wordSum": 5,
                    "tokenSum": 10,
                    "tokenCount": 9
                },
                {
                    "type": "Heading",
                    "prefix": "#",
                    "text": "2022 CHAPTER 34",
                    "tokenCum": 62,
                    "children": [
                        {
                            "type": "Text",
                            "prefix": "",
                            "text": "An Act to recognise British Sign Language as a language of England, Wales andScotland; to require the Secretary of State to report on the promotion andfacilitation of the use of British Sign Language by ministerial governmentdepartments; and to require guidance to be issued in relation to British SignLanguage.",
                            "tokenCum": 126,
                            "wordSum": 48,
                            "tokenSum": 65,
                            "tokenCount": 65
                        }
                    ],
                    "wordSum": 51,
                    "tokenSum": 75,
                    "tokenCount": 9
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "[28th April 2022]",
                    "tokenCum": 137,
                    "wordSum": 3,
                    "tokenSum": 12,
                    "tokenCount": 11
                },
                {
                    "type": "Text",
                    "prefix": "",
                    "text": "Be it enacted by the Queen\u2019s most Excellent Majesty, by and with the adviceand consent of the Lords Spiritual and Temporal, and Commons, in this presentParliament assembled, and by the authority of the same, as follows:\u2014",
                    "tokenCum": 194,
                    "children": [
                        {
                            "type": "Heading",
                            "prefix": "##",
                            "text": "Declaration recognising British Sign Language",
                            "tokenCum": 201,
                            "children": [
                                {
                                    "type": "Heading",
                                    "prefix": "### 1",
                                    "text": "Recognition of British Sign Language",
                                    "tokenCum": 208,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "British Sign Language is recognised as a language of England, Wales andScotland.",
                                            "tokenCum": 226,
                                            "wordSum": 12,
                                            "tokenSum": 21,
                                            "tokenCount": 21
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "Subsection (1) does not affect the operation of any enactment or rule oflaw.",
                                            "tokenCum": 246,
                                            "wordSum": 13,
                                            "tokenSum": 23,
                                            "tokenCount": 23
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "But see sections 2 and 3 (which, in connection with the recognition ofBritish Sign Language by subsection (1), impose duties on the Secretary ofState relating to the promotion and facilitation of the use of British SignLanguage).",
                                            "tokenCum": 298,
                                            "wordSum": 36,
                                            "tokenSum": 55,
                                            "tokenCount": 55
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "In this section, \u201cenactment\u201d includes an enactment comprised in, or in aninstrument made under, an Act of the Scottish Parliament.",
                                            "tokenCum": 331,
                                            "wordSum": 20,
                                            "tokenSum": 36,
                                            "tokenCount": 36
                                        }
                                    ],
                                    "wordSum": 86,
                                    "tokenSum": 144,
                                    "tokenCount": 8
                                }
                            ],
                            "wordSum": 91,
                            "tokenSum": 152,
                            "tokenCount": 7
                        },
                        {
                            "type": "Heading",
                            "prefix": "##",
                            "text": "Duties relating to the promotion and facilitation of British Sign Language",
                            "tokenCum": 346,
                            "children": [
                                {
                                    "type": "Heading",
                                    "prefix": "### 2",
                                    "text": "Duty of Secretary of State to report on British Sign Language",
                                    "tokenCum": 359,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "The Secretary of State must prepare and publish a British Sign Languagereport for each reporting period.",
                                            "tokenCum": 380,
                                            "wordSum": 16,
                                            "tokenSum": 24,
                                            "tokenCount": 24
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "A British Sign Language report is a report describing what each relevantgovernment department has done to promote or facilitate the use of BritishSign Language in its communications with the public.",
                                            "tokenCum": 417,
                                            "wordSum": 30,
                                            "tokenSum": 40,
                                            "tokenCount": 40
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "For this purpose a relevant government department\u2019s communications with thepublic include in particular\u2014",
                                            "tokenCum": 435,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "any public announcement which it makes about policy or about changes to thelaw,",
                                                    "tokenCum": 451,
                                                    "wordSum": 13,
                                                    "tokenSum": 20,
                                                    "tokenCount": 20
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "the publication by it of any plan, strategy, consultation document orconsultation response, or any explanatory or supporting materials, and",
                                                    "tokenCum": 479,
                                                    "wordSum": 19,
                                                    "tokenSum": 32,
                                                    "tokenCount": 32
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(c)",
                                                    "text": "its use of press conferences, social media or a government website topublicise any of its activities or policies,",
                                                    "tokenCum": 502,
                                                    "children": [
                                                        {
                                                            "type": "Text",
                                                            "prefix": "",
                                                            "text": "but do not include communications with individual members of the public, orany other communications which the relevant government department does notintend to be shared with the public at large.",
                                                            "tokenCum": 538,
                                                            "wordSum": 29,
                                                            "tokenSum": 41,
                                                            "tokenCount": 41
                                                        }
                                                    ],
                                                    "wordSum": 47,
                                                    "tokenSum": 68,
                                                    "tokenCount": 26
                                                }
                                            ],
                                            "wordSum": 92,
                                            "tokenSum": 141,
                                            "tokenCount": 20
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "In preparing a British Sign Language report, the Secretary of State must\u2014",
                                            "tokenCum": 553,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "collect information from each relevant government department about thematters to be covered by the report, and",
                                                    "tokenCum": 572,
                                                    "wordSum": 16,
                                                    "tokenSum": 23,
                                                    "tokenCount": 23
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "set out in full or summarise that information in the report.",
                                                    "tokenCum": 585,
                                                    "wordSum": 11,
                                                    "tokenSum": 17,
                                                    "tokenCount": 17
                                                }
                                            ],
                                            "wordSum": 39,
                                            "tokenSum": 58,
                                            "tokenCount": 17
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(5)",
                                            "text": "The Secretary of State must not collect, or include in a British SignLanguage report, information about any communication made by a relevantgovernment department so far as that communication\u2014",
                                            "tokenCum": 620,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "relates only to Scotland and does not relate to reserved matters (withinthe meaning of the Scotland Act 1998);",
                                                    "tokenCum": 647,
                                                    "wordSum": 18,
                                                    "tokenSum": 31,
                                                    "tokenCount": 31
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "relates only to Wales and does not relate to reserved matters (within themeaning of the Government of Wales Act 2006).",
                                                    "tokenCum": 677,
                                                    "wordSum": 20,
                                                    "tokenSum": 34,
                                                    "tokenCount": 34
                                                }
                                            ],
                                            "wordSum": 66,
                                            "tokenSum": 103,
                                            "tokenCount": 37
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(6)",
                                            "text": "The Secretary of State must publish each British Sign Language report nomore than three months after the end of the reporting period to which itrelates.",
                                            "tokenCum": 706,
                                            "wordSum": 25,
                                            "tokenSum": 32,
                                            "tokenCount": 32
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(7)",
                                            "text": "In this section \u201creporting period\u201d means\u2014",
                                            "tokenCum": 716,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "in respect of the first British Sign Language report, the period beginningwith the day on which this section comes into force and ending with 30 April2023;",
                                                    "tokenCum": 751,
                                                    "wordSum": 26,
                                                    "tokenSum": 39,
                                                    "tokenCount": 39
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "in respect of each subsequent British Sign Language report, the period(being not longer than three years) beginning on the day after the previousreporting period ended and ending on such date as the Secretary of Statedecides.",
                                                    "tokenCum": 797,
                                                    "wordSum": 35,
                                                    "tokenSum": 50,
                                                    "tokenCount": 50
                                                }
                                            ],
                                            "wordSum": 67,
                                            "tokenSum": 102,
                                            "tokenCount": 12
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(8)",
                                            "text": "In this section and section 3, \u201crelevant government department\u201d means aUnited Kingdom ministerial government department listed in the Schedule.",
                                            "tokenCum": 826,
                                            "wordSum": 19,
                                            "tokenSum": 32,
                                            "tokenCount": 32
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(9)",
                                            "text": "The Secretary of State may by regulations made by statutory instrumentamend the list in the Schedule so as to add, remove or vary an entry inconsequence of\u2014",
                                            "tokenCum": 862,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "a change to the name of a United Kingdom ministerial government department,or",
                                                    "tokenCum": 877,
                                                    "wordSum": 12,
                                                    "tokenSum": 19,
                                                    "tokenCount": 19
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "any change to the way in which the United Kingdom ministerial governmentdepartments are organised.",
                                                    "tokenCum": 897,
                                                    "wordSum": 14,
                                                    "tokenSum": 24,
                                                    "tokenCount": 24
                                                }
                                            ],
                                            "wordSum": 53,
                                            "tokenSum": 82,
                                            "tokenCount": 38
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(10)",
                                            "text": "A statutory instrument containing regulations under subsection (9) issubject to annulment in pursuance of a resolution of either House ofParliament.",
                                            "tokenCum": 931,
                                            "wordSum": 20,
                                            "tokenSum": 37,
                                            "tokenCount": 37
                                        }
                                    ],
                                    "wordSum": 438,
                                    "tokenSum": 666,
                                    "tokenCount": 14
                                },
                                {
                                    "type": "Heading",
                                    "prefix": "### 3",
                                    "text": "Guidance on use of British Sign Language",
                                    "tokenCum": 940,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "The Secretary of State must issue guidance, or arrange for guidance to beissued, about the promotion and facilitation of the use of British SignLanguage.",
                                            "tokenCum": 972,
                                            "wordSum": 24,
                                            "tokenSum": 35,
                                            "tokenCount": 35
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "Guidance under this section may for example include\u2014",
                                            "tokenCum": 983,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "advice for relevant government departments on providing information to theSecretary of State in accordance with section 2(4),",
                                                    "tokenCum": 1008,
                                                    "wordSum": 17,
                                                    "tokenSum": 29,
                                                    "tokenCount": 29
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "advice on best practice for communicating with British Sign Language users(both when interacting with individuals and when communicating with the publicat large), and",
                                                    "tokenCum": 1038,
                                                    "wordSum": 23,
                                                    "tokenSum": 34,
                                                    "tokenCount": 34
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(c)",
                                                    "text": "case studies to illustrate the value of providing British Sign Languageinterpretation in communications with the public.",
                                                    "tokenCum": 1059,
                                                    "wordSum": 16,
                                                    "tokenSum": 25,
                                                    "tokenCount": 25
                                                }
                                            ],
                                            "wordSum": 64,
                                            "tokenSum": 102,
                                            "tokenCount": 13
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "Guidance under this section must not include advice or other materialwhich\u2014",
                                            "tokenCum": 1074,
                                            "children": [
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(a)",
                                                    "text": "relates only to Scotland and does not relate to reserved matters (withinthe meaning of the Scotland Act 1998);",
                                                    "tokenCum": 1101,
                                                    "wordSum": 18,
                                                    "tokenSum": 31,
                                                    "tokenCount": 31
                                                },
                                                {
                                                    "type": "Alpha point",
                                                    "prefix": "(b)",
                                                    "text": "relates only to Wales and does not relate to reserved matters (within themeaning of the Government of Wales Act 2006).",
                                                    "tokenCum": 1131,
                                                    "wordSum": 20,
                                                    "tokenSum": 34,
                                                    "tokenCount": 34
                                                }
                                            ],
                                            "wordSum": 49,
                                            "tokenSum": 83,
                                            "tokenCount": 17
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "The Secretary of State must arrange for any guidance issued under thissection to be published.",
                                            "tokenCum": 1149,
                                            "wordSum": 15,
                                            "tokenSum": 21,
                                            "tokenCount": 21
                                        }
                                    ],
                                    "wordSum": 159,
                                    "tokenSum": 252,
                                    "tokenCount": 10
                                }
                            ],
                            "wordSum": 608,
                            "tokenSum": 934,
                            "tokenCount": 15
                        },
                        {
                            "type": "Heading",
                            "prefix": "##",
                            "text": "General",
                            "tokenCum": 1150,
                            "children": [
                                {
                                    "type": "Heading",
                                    "prefix": "### 4",
                                    "text": "Extent, commencement and short title",
                                    "tokenCum": 1159,
                                    "children": [
                                        {
                                            "type": "Digit point",
                                            "prefix": "(1)",
                                            "text": "This Act extends to England and Wales and Scotland.",
                                            "tokenCum": 1169,
                                            "wordSum": 9,
                                            "tokenSum": 13,
                                            "tokenCount": 13
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(2)",
                                            "text": "This section comes into force on the day on which this Act is passed.",
                                            "tokenCum": 1184,
                                            "wordSum": 14,
                                            "tokenSum": 18,
                                            "tokenCount": 18
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(3)",
                                            "text": "Sections 1 and 2 and the Schedule come into force at the end of the periodof two months beginning with the day on which this Act is passed.",
                                            "tokenCum": 1218,
                                            "wordSum": 28,
                                            "tokenSum": 37,
                                            "tokenCount": 37
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(4)",
                                            "text": "Section 3 comes into force on such day as the Secretary of State appointsby regulations made by statutory instrument.",
                                            "tokenCum": 1244,
                                            "wordSum": 19,
                                            "tokenSum": 29,
                                            "tokenCount": 29
                                        },
                                        {
                                            "type": "Digit point",
                                            "prefix": "(5)",
                                            "text": "This Act may be cited as the British Sign Language Act 2022.",
                                            "tokenCum": 1262,
                                            "children": [
                                                {
                                                    "type": "Text",
                                                    "prefix": "",
                                                    "text": "Section 2",
                                                    "tokenCum": 1265,
                                                    "wordSum": 2,
                                                    "tokenSum": 7,
                                                    "tokenCount": 7
                                                }
                                            ],
                                            "wordSum": 14,
                                            "tokenSum": 28,
                                            "tokenCount": 20
                                        }
                                    ],
                                    "wordSum": 89,
                                    "tokenSum": 136,
                                    "tokenCount": 10
                                }
                            ],
                            "wordSum": 90,
                            "tokenSum": 138,
                            "tokenCount": 1
                        }
                    ],
                    "wordSum": 825,
                    "tokenSum": 1282,
                    "tokenCount": 57
                }
            ],
